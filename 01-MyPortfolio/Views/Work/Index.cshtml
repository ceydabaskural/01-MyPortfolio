@model List<_01_MyPortfolio.Models.Work>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Çalışmalarım</h2>

<table class="table table-bordered">
    <tr>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>ImageUrl</th>
        <th>GithubUrl</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td>@item.GithubUrl</td>

            <td><a href="/Work/DeleteWork/@item.WorkId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Work/UpdateWork/@item.WorkId" class="btn btn-secondary">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Work/CreateWork" class="btn btn-info">Yeni Çalışma Ekle</a>
