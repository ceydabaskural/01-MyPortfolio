@model _01_MyPortfolio.Models.Experience
@{
    ViewBag.Title = "CreateExperience";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Yeni Deneyim Girişi</h2>


@*method="post" diyerek aşağıdaki kodlar post işlemi olduğu zaman çalışacak demiş oluyoruz. Örneğin Post işlemi de sayfada bir butona tıklandığı zaman olabilir.*@
<form method="post">
    <label>Şirket Adı</label>
    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
    <br />
    <label>İş Tarih</label>
    @Html.TextBoxFor(x => x.WorkDate, new { @class = "form-control" })
    <br />
    <label>Unvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description,6,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Deneyimi Ekle</button>
</form>

