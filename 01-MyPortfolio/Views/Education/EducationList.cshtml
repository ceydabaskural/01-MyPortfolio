@model List<_01_MyPortfolio.Models.Education>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Eğitimlerim</h2>
<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>Eğitim Adı</th>
            <th>Eğitim Tarihi</th>
            <th>Alt Başlık</th>
            <th>Açıklama</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.EducationDate</td>
                <td>@item.Subtitle</td>
                <td>@item.Description</td>
                <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <td><a href="/Education/CreateEducation" class="btn btn-info">Yeni Eğitim Ekle</a></td>
</div>
