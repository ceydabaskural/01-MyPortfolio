@model  _01_MyPortfolio.Models.Profile
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Profil Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ProfileId, new { @class = "form-control" })
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Numara</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <br />
    <label>Github</label>
    @Html.TextBoxFor(x => x.Github, new { @class = "form-control" })
    <br />
    <label>Fotoğraf</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Harita</label>
    @Html.TextBoxFor(x => x.MapLocation, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Profili Güncelle</button>
</form>