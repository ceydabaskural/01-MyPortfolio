@using PagedList
@using PagedList.Mvc

@model  PagedList.IPagedList<_01_MyPortfolio.Models.Skill>

@{
    ViewBag.Title = "SkillList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yeteneklerim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İkon</th>
        <th>Değer</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillId</td>
            <td>@item.Title</td>
            <td>@item.Icon</td>
            <td>@item.Value</td>
            <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, p => Url.Action("SkillList", new { p }), new PagedListRenderOptions
{
    LiElementClasses = new List<string>
    {
        "page-link"
    }

})

<td><a href="/Skill/CreateSkill/" class="btn btn-info">Yeni Yetenek Girişi</a></td>



